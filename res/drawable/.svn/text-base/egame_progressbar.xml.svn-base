<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">

        <shape >
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="#ffcbcbcb"
                android:centerY="0.75"
                android:endColor="#ffcbcbcb"
                android:startColor="#ffcbcbcb" />
        </shape>
    </item>

    <item android:id="@android:id/progress">

        <clip >

            <shape >

                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:endColor="#ff59c620"
                    android:startColor="#ff59c620" />
            </shape>
        </clip>
    </item>

</layer-list>