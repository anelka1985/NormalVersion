<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/egame_bg" >

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="fill_parent"
        android:layout_height="60dp" >

        <!-- 标题背景层 -->

        <TextView
            android:id="@+id/m_lative_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/egame_top" >
        </TextView>

        <TextView
            android:id="@+id/topline"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/m_lative_top"
            android:background="@drawable/egame_top_line" >
        </TextView>
        <!-- 返回按钮 -->

        <TextView
            android:id="@+id/m_finish_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/egame_back" />
        <!-- 标题文字层 -->

        <TextView
            android:id="@+id/m_novice_name"
            style="@style/egame_noviceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="@string/egame_novice_name" />

        <TextView
            style="@style/egame_noviceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m_novice_name"
            android:layout_centerHorizontal="true"
            android:text="@string/egame_novice" />
    </RelativeLayout>

    <TextView
        android:id="@+id/layouty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/egame_finish_top"
        android:gravity="center_horizontal"
        android:paddingTop="70dp"
        android:text="@string/egame_novice_finish_text"
        android:textColor="#1289B4"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/m_prompt_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layouty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/egame_novice_char"
        android:textColor="#7D7D7D"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/m_prompt_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_prompt_text2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textColor="#7D7D7D"
        android:textSize="14dp" />
    <RelativeLayout
        android:id="@+id/m_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_prompt_text3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/egame_btn_green_circularity_selector" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/egame_go_client"
            android:textColor="#5FB03E"
            android:textSize="15dp" />
    </RelativeLayout>

</RelativeLayout>