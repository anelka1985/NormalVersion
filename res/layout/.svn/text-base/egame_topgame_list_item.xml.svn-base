<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/egame_gamelist_bg_selector"
	android:descendantFocusability="blocksDescendants" android:gravity="center_vertical"
	android:orientation="vertical"
	>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/egame_listbg_42px"
	    android:gravity="center_vertical"
	    android:paddingLeft="5sp"
	    >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:gravity="center"
	        android:layout_height="wrap_content"
	        android:background="@drawable/bg_number"
	        android:id="@+id/numbertext"
	        android:textColor="@color/egame_white"
	        
	        />
	     <TextView 
	        android:paddingLeft="6sp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/youxiname"
	        android:textSize="15sp"
	        android:textStyle="bold"
	        android:textColor="@color/egame_text_black"
	        />
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
	    <TextView 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/youxixinxi"
	        android:textSize="12sp"
	        android:textColor="@color/egame_text_black"
	        android:paddingTop="5sp"
	        android:paddingBottom="8sp"
	        android:paddingLeft="8sp"
	        android:paddingRight="8sp"
	        />
	    <ImageView 
	        android:layout_width="fill_parent"
	        android:layout_height="200dp"
	        android:id="@+id/youxiicon"
	        android:background="@drawable/egame_defaultgamepic"
	        />
	</LinearLayout>
	<LinearLayout 
	android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/egame_gamelist_bg_selector"
	android:descendantFocusability="blocksDescendants" android:gravity="center_vertical"
	android:minWidth="320dp" android:orientation="horizontal" android:paddingLeft="10dip"
	android:paddingRight="10dip">
	<RelativeLayout android:id="@+id/iconFrame" android:layout_width="62dip"
		android:layout_height="58dip" android:scaleType="fitXY">

		<ImageView android:id="@+id/icon" android:layout_width="52dp" android:layout_height="52dp"
			 android:background="@drawable/egame_defaultgamepic"
			android:scaleType="fitXY" android:src="@drawable/egame_touxiangzhezhao" android:layout_centerInParent="true"/>

		<ImageView android:id="@+id/tip" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentRight="true"
			android:layout_marginRight="2dip" android:layout_marginTop="2dip" android:background="@drawable/egame_new" />
	</RelativeLayout>

	<RelativeLayout android:layout_width="0dip" android:layout_height="fill_parent"
		android:layout_marginBottom="6dip" android:layout_marginTop="6dip" android:layout_weight="1"
		android:orientation="vertical">

		<TextView android:id="@+id/info" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentTop="true" android:singleLine="true"
			android:textColor="@color/egame_text_gray" android:textSize="12sp" />

		<TextView android:id="@+id/price" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentRight="true" android:singleLine="true"
			android:textColor="#059c01" android:textSize="12sp" />

		<TextView android:id="@+id/name" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerVertical="true" android:singleLine="true"
			android:textColor="#1e1e1e" android:textSize="14sp" />

		<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentBottom="true" android:orientation="horizontal">

			<ImageView android:id="@+id/star" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_vertical"
				android:background="@drawable/egame_star0" />
			<TextView android:id="@+id/downloadCount" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginLeft="3dip" android:gravity="center_vertical"
				android:singleLine="true" android:textColor="#656565" android:textSize="12sp" />
		</LinearLayout>
	</RelativeLayout>

	<LinearLayout android:id="@+id/download" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@drawable/egame_btn_green_selector"
		android:focusable="false" android:gravity="center" android:orientation="horizontal"
		android:layout_marginLeft="8dp">

		<ImageView android:id="@+id/download_icon" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginRight="5dp" android:src="@drawable/egame_xiazaiicon" />

		<TextView android:id="@+id/download_text" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="13sp" />
	</LinearLayout>
</LinearLayout>
</LinearLayout>