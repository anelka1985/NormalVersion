<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:gravity="center_horizontal" android:layout_height="wrap_content"
	android:background="#FFFFFF">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="30dip" android:background="@drawable/egame_renren_sdk_activity_title_bg"
		android:padding="1dip">
		<ImageView android:src="@drawable/egame_renren_android_title_logo" android:scaleType="fitXY"
			android:layout_width="85dip" android:layout_height="30dip" />
		<TextView android:text="@string/egame_renren_sdk_title_upload_label"
			android:layout_width="wrap_content" android:layout_height="30dip"
			android:gravity="center_vertical" android:paddingLeft="3dip"
			android:textColor="#FFFFFF" android:textSize="16dip"
			android:paddingBottom="1dip" />
	</LinearLayout>
	<EditText android:id="@+id/myword" android:layout_width="260dip"
		android:layout_height="50dip" android:layout_marginLeft="10dip"
		android:layout_marginTop="10dip" android:layout_marginRight="10dip"
		android:background="@drawable/egame_inputtext_bg" android:paddingLeft="5dip"
		android:textSize="13dip" />
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="10dip">
		<ImageView android:layout_height="120dip" android:id="@+id/game_pics"
			android:layout_width="120dip" android:scaleType="fitXY"
			android:layout_marginLeft="10dip" android:background="@drawable/egame_game_defaultp"></ImageView>
		<LinearLayout android:layout_toRightOf="@id/game_pics"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="vertical" android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip" android:background="#FFFFFF">
			<TextView android:id="@+id/game_name" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textColor="#357FBF"
				android:textSize="13dip" android:text="愤怒的小鸟"></TextView>
			<TextView android:id="@+id/game_type" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="13dip"
				android:text="热度：4颗星" android:textColor="#000000"></TextView>
			<TextView android:id="@+id/game_introduction"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textSize="13dip" android:text="下载次数：252171"
				android:textColor="#000000"></TextView>
		</LinearLayout>

	</RelativeLayout>
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_marginTop="10dip" android:layout_height="35dip"
		android:background="#FFFFFF">
		<ImageView android:layout_height="20dip" android:id="@+id/icons"
			android:layout_width="20dip" android:layout_marginLeft="10dip"
			android:background="@drawable/egame_renren_action_icon"></ImageView>
		<TextView android:layout_height="35dip" android:textSize="13dip"
			android:layout_marginLeft="5dip" android:text="中国电信爱游戏" android:id="@+id/action_name"
			android:layout_toRightOf="@id/icons" android:layout_width="fill_parent"
			android:textColor="#85B1D6"></TextView>
	</RelativeLayout>

	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="40dip" android:paddingRight="10dip"
		android:background="#E4ECF1" android:paddingTop="10dip">
		<Button android:id="@+id/cancel_button" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#ffffff"
			android:text="取消" android:background="@drawable/egame_renren_sdk_default_button_unselected"
			android:layout_alignParentRight="true" />
		<Button android:id="@+id/publish_button" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#ffffff"
			android:text="确定" android:background="@drawable/egame_renren_sdk_default_button_unselected"
			android:layout_toLeftOf="@id/cancel_button"
			android:layout_marginRight="10dip" />
	</RelativeLayout>
</LinearLayout>
