<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/iconFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/egame_defaultgamepic"
                android:scaleType="fitXY"
                android:src="@drawable/egame_touxiangzhezhao" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:paddingLeft="5dip" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="2dip"
                    android:singleLine="true"
                    android:text="捕鱼之海底捞"
                    android:textColor="#1e1e1e"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:padding="2dip"
                    android:singleLine="true"
                    android:text="角色类    16.3M"
                    android:textColor="#646464"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip" >

            <ImageButton
                android:id="@+id/startgame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/egame_btn_green_selector"
                android:focusable="false" />

            <ImageView
                android:id="@+id/kaishitubiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="5dip"
                android:src="@drawable/egame_kaishiicon" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_centerInParent="true"
                android:paddingLeft="15dip"
                android:text="开始"
                android:textColor="#2b9900" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>