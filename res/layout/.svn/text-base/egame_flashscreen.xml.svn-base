<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/egame_loading_bg"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/framescreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" >

        <TextView
            android:id="@+id/progress_bg"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/egame_loading_progressbar_bg"
            android:visibility="gone" />

        <TextView
            android:id="@+id/progress_blue"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/egame_loading_progressbar_blue"
            android:visibility="gone" />
    </FrameLayout>

</RelativeLayout>